<scxml xmlns="http://www.w3.org/2005/07/scxml" version="1.0" initial="first" datamodel="xpath">
  <datamodel>
    <data id="ticket">
      <price xmlns="">0</price>
      <otherElement xmlns=""/>
    </data>
    <data id="secondTicket">
      <price xmlns="">0</price>
      <otherElement xmlns=""/>
    </data>
  </datamodel>
  <state id="first">
    <transition event="e" target="s1" />
    <transition event="e2" target="s2" />
    <transition event="*" target="s3" />
  </state>
  <state id="s1">
    <onentry>
      <assign location="$ticket/price" expr="'10'" />
    </onentry>
  </state>
  <state id="s2">
    <onentry>
      <assign location="$secondTicket/price" expr="'20'" />
    </onentry>
  </state>
  <state id="s3">
    <datamodel>
      <data id="thirdTicket">
        <price xmlns="">0</price>
        <otherElement xmlns=""/>
      </data>
    </datamodel>
    <onentry>
      <assign location="$thirdTicket/price" expr="'30'" />
    </onentry>
  </state>
</scxml>